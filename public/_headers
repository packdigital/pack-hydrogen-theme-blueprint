# Shopify Oxygen CDN Cache Headers Configuration
# These headers are applied to static assets served from the public directory
# https://shopify.dev/docs/custom-storefronts/oxygen/caching

# All static assets - long cache with immutable for hashed files
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# SVG icons - long cache as these rarely change
/svgs/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Favicon
/favicon.svg
  Cache-Control: public, max-age=86400, stale-while-revalidate=604800
  X-Content-Type-Options: nosniff

# Fonts - immutable cache (fonts have content hashes)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff
  Access-Control-Allow-Origin: *

# Robots.txt - short cache to allow updates
/robots.txt
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# Sitemap - short cache to reflect content changes
/sitemap.xml
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400
